.controls
  %ul#prior
    - @prior_photos.reverse.each do |p|
      %li= photo_link(p, :rel => ("prev" if p == @prior_photos.first))
  %ul#current
    %li= photo_link(@photo, :rel => "self")
  %ul#subsequent
    - @subsequent_photos.each do |p|
      %li= photo_link(p, :rel => ("next" if p == @subsequent_photos.first))
.centered
  %p
    = photo_image(@photo, :snap)
    = link_to(image_tag("printer.png"), photo_image_path(@photo, :max), :title => "printable size")
  = form_for(@photo) do |f| 
    = f.text_field :description, :cols => 40, :rows => 2
